                <Button Click="Analizador">Analizador Léxico</Button>
                <!--<Button Click="GuardarComo">Guardar como</Button>-->
            </ToolBar>
        </ToolBarTray>
       <!-- <StatusBar DockPanel.Dock="Bottom" >
            <TextBlock>Col: 1</TextBlock>
